{
    "manifest_version": 3,
    "name": "Awesome AI Prompts",
    "version": "1.0.0",
    "description": "Quick access to curated AI prompts for ChatGPT, Claude, and Gemini",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}